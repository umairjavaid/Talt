{
  "description": "Comparison of TALT vs Adam for BERT model on GLUE SST-2 dataset",
  "experiments": [
    {
      "name": "bert-base_sst2_talt",
      "architecture": "bert-base",
      "dataset": "glue-sst2",
      "optimizer": "talt",
      "epochs": 5,
      "batch-size": 32,
      "lr": 2e-5,
      "weight-decay": 0.01,
      "mixed-precision": true,
      "save-checkpoints": true,
      "projection-dim": 64,
      "memory-size": 5,
      "update-interval": 50,
      "valley-strength": 0.05,
      "smoothing-factor": 0.95
    },
    {
      "name": "bert-base_sst2_adam",
      "architecture": "bert-base",
      "dataset": "glue-sst2",
      "optimizer": "adam",
      "epochs": 5,
      "batch-size": 32,
      "lr": 2e-5,
      "weight-decay": 0.01,
      "mixed-precision": true,
      "save-checkpoints": true
    },
    {
      "name": "bert-base_sst2_talt_tuned",
      "architecture": "bert-base",
      "dataset": "glue-sst2",
      "optimizer": "talt",
      "tune-hyperparams": true,
      "n-trials": 20,
      "study-name": "bert_talt_tuning",
      "epochs": 5,
      "batch-size": 32,
      "lr": 2e-5,
      "weight-decay": 0.01,
      "mixed-precision": true,
      "save-checkpoints": true
    }
  ]
}